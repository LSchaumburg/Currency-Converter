BoxLayout:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    Label:
        id: current_location
        text: app.current_location
        size_hint_y: 0.25
        halign: 'center'
        valign: 'middle'
        color: (0, 0, 0, 1)
        font_size: 24
    GridLayout:
        rows: 2
        cols: 2
        size_hint_y: 0.25
        Spinner:
            id: country_selector
            text: ''
            values: app.country_codes
            size_hint_x: 0.75
            on_text: app.change_country(self.text)
        TextInput:
            id: current_currency_input
            text: ''
            on_text_validate: app.handle_away_currency_input()
#            on_press: app.current_country
            multiline: False
            color: (0, 0, 0, 1)
            font_size: 48
        Label:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: home_country
            text: app.home_country
            font_size: 18
            halign: 'center'
            valign: 'middle'
            color: (0, 0, 0, 1)
            size_hint_x: 0.75
        TextInput:
            id: home_currency_input
            text: ''
            on_text_validate: app.handle_home_currency_input()
#            on_press: app.change_country(self.text)
            multiline: False
            color: (0, 0, 0, 1)
            font_size: 42
    Label:
        id: current_date_field
        # displays current date (year/month/day)
        size_hint_y: 0.40
        text: app.current_date
        font_size: 24
        halign: 'center'
        valign: 'middle'
        color: (0, 0, 0, 1)
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.10
        Label:
            id: status_field
            # status message of the app
            # config file is loaded successfully
            # config file could not be loaded (e.g. the file was not found)
            # config file loaded but it contains invalid trip details
            text: 'Trip details accepted'
            canvas.before:
                Color:
                    rgba: 0.25, 0.25, 0.25, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            color: (1, 1, 1, 1)
        Button:
            id: update_button
            # updates the conversion rates the app is using
            text: 'Update Currency'
            on_press: app.handle_update_button()
            color: (1, 1, 1, 1)
